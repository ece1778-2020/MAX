<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Settings1Fragment"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings1_lbl_set_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/setting1_lbl_set_hr"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/settings1_lbl_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/settings1_lbl_age"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_lbl_set_hr" />

            <EditText
                android:id="@+id/settings1_input_age"
                android:background="@drawable/edit_text_border"
                android:maxLength="3"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginStart="100dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@+id/settings1_lbl_age"
                app:layout_constraintStart_toEndOf="@+id/settings1_lbl_age" />

            <TextView
                android:id="@+id/settings1_lbl_max_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/settings1_lbl_max_hr"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_lbl_age" />

            <EditText
                android:id="@+id/settings1_input_max_hr"
                android:background="@drawable/edit_text_border"
                android:maxLength="3"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@+id/settings1_lbl_max_hr"
                app:layout_constraintEnd_toEndOf="@+id/settings1_input_age"
                app:layout_constraintStart_toEndOf="@+id/settings1_lbl_max_hr"
                app:layout_constraintStart_toStartOf="@+id/settings1_input_age" />

            <TextView
                android:id="@+id/settings1_lbl_min_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/settings1_lbl_min_hr"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_lbl_max_hr" />

            <EditText
                android:id="@+id/settings1_input_min_hr"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:maxLength="3"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintBaseline_toBaselineOf="@+id/settings1_lbl_min_hr"
                app:layout_constraintEnd_toEndOf="@+id/settings1_input_max_hr"
                app:layout_constraintStart_toEndOf="@+id/settings1_lbl_min_hr"
                app:layout_constraintStart_toStartOf="@+id/settings1_input_max_hr" />

            <View
                android:id="@+id/settings1_solid_bar"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@color/colorPrimaryLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_lbl_min_hr" />

            <TextView
                android:id="@+id/settings1_lbl_exercise_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/settings1_lbl_set_exercise_goal"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_solid_bar" />

            <TextView
                android:id="@+id/settings1_lbl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="@string/settings1_lbl_time"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_lbl_exercise_goal" />

            <EditText
                android:id="@+id/settings1_input_time"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/settings1_input_max_hr"
                app:layout_constraintStart_toEndOf="@+id/settings1_lbl_time"
                app:layout_constraintStart_toStartOf="@+id/settings1_input_max_hr"
                app:layout_constraintTop_toTopOf="@+id/settings1_lbl_time" />

            <Button
                android:id="@+id/settings1_btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="32dp"
                android:background="@color/colorPrimary"
                android:elevation="10sp"
                android:text="@string/settings1_btn_save"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1_input_time" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>